@model DAW_Lab_4.Models.Article


<h1>Editare articol</h1>

@using (Html.BeginForm("Edit", "Articles", Model.Id))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, null, new { @class = "text-danger" })

    @Html.Hidden("Id")

    @Html.Label("Title", "Titlu articol")
    @Html.Editor("Title", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br />

    @Html.Label("Content", "Continut articol")
    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control summernote" } })
    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br />

    @Html.Label("CategoryId", "Selectati categoria")
    @Html.DropDownList("CategoryId", new SelectList(Model.Categ, "Value", "Text"), "Selectati categoria", new { @class = "form-control" })
    @Html.ValidationMessage("CategoryId", null, new { @class = "text-danger" })
    <br />

    <button class="btn btn-success" type="submit">Editare articol</button>
}
